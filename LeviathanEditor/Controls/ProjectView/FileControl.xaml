<UserControl x:Class="LeviathanEditor.Controls.ProjectView.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeviathanEditor.Controls.ProjectView"
             mc:Ignorable="d" 
             d:Height="20" d:Width="20"
             MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="pack://application:,,,/Resources/Icons/HQ/003-unlimited.png" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></Image>
        <TextBlock x:Name="FileNameLabel" Grid.Row="1"  Foreground="{StaticResource TextColor}" FontSize="11" TextWrapping="Wrap" Padding="2,0,2,0" TextAlignment="Center">Filename.txt</TextBlock>
    </Grid>
</UserControl>
