<UserControl x:Class="LeviathanEditor.Controls.GameWindow.Graphs.ShaderGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeviathanEditor.Controls.GameWindow.Graphs"
             xmlns:ngv="clr-namespace:NodeGraph.View;assembly=NodeGraph"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    
    <ngv:FlowChartView DataContext="{Binding Path=FlowChartViewModel, RelativeSource={RelativeSource AncestorType={x:Type local:ShaderGraph}}}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

</UserControl>
